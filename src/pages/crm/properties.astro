---
import CrmLayout from "@/layouts/CrmLayout.astro";
---
<CrmLayout title="CRM | Propiedades" section="properties">
  <div class="crm-stack">
    <section class="crm-card crm-full">
      <h2>Estructura base de inmuebles</h2>
      <ul class="crm-list">
        <li>`record_type = project` para promociones padre.</li>
        <li>`record_type = unit` para viviendas hijas vinculadas por `parent_property_id`.</li>
        <li>`operation_type` soporta `sale`, `rent` y `both`.</li>
        <li>`status` soporta `available`, `reserved`, `sold`, `rented`, `private`, `draft`.</li>
      </ul>
    </section>

    <section class="crm-card crm-full">
      <h2>Ejemplo de inventario</h2>
      <div class="crm-table-wrap">
        <table class="crm-table">
          <thead>
            <tr>
              <th>Codigo</th>
              <th>Tipo</th>
              <th>Operacion</th>
              <th>Precio venta</th>
              <th>Renta mensual</th>
              <th>Estado</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>PM0084</td>
              <td>project</td>
              <td>sale</td>
              <td>Desde 430000 EUR</td>
              <td>-</td>
              <td><span class="crm-badge ok">available</span></td>
            </tr>
            <tr>
              <td>PM0084-B2</td>
              <td>unit</td>
              <td>sale</td>
              <td>459000 EUR</td>
              <td>-</td>
              <td><span class="crm-badge warn">reserved</span></td>
            </tr>
            <tr>
              <td>RENT-1043</td>
              <td>single</td>
              <td>rent</td>
              <td>-</td>
              <td>1950 EUR</td>
              <td><span class="crm-badge ok">available</span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</CrmLayout>
