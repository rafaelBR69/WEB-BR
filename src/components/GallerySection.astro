---
const { title, items = [] } = Astro.props;

if (!items.length) return null;
---
<section class="gallery-section">
  <h2>{title}</h2>

  <div class="gallery-grid">
    {items.map((img) => (
      <img
        src={img.url}
        alt={img.alt ?? ""}
        loading="lazy"
        decoding="async"
      />
    ))}
  </div>
</section>
