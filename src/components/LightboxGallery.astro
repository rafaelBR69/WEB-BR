---
const { items = [] } = Astro.props;
---

{items.length > 0 && (
  <div class="gallery-grid">
    {items.map((img, index) => (
      <a
        href={img.url}
        class="gallery-item"
        data-lightbox="property"
      >
        <img
          src={img.url}
          loading={index === 0 ? "eager" : "lazy"}
          decoding="async"
        />
      </a>
    ))}
  </div>
)}
